{
  "name": "toolgame-proxy",
  "version": "1.0.0",
  "description": "Proxy server for ToolGamePhuXuan APIs",
  "main": "api.js",
  "scripts": {
    "start": "node api.js",
    "dev": "nodemon api.js",
    "docker:build": "docker build -t toolgame-proxy .",
    "docker:run": "docker run -d -p 3002:3002 --name toolgame-proxy toolgame-proxy",
    "docker:logs": "docker logs -f toolgame-proxy",
    "docker:stop": "docker stop toolgame-proxy && docker rm toolgame-proxy",
    "docker:clean": "docker system prune -f"
  },
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": ["proxy", "api", "toolgame"],
  "author": "",
  "license": "MIT"
}
